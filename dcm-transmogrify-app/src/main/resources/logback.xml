<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %-15logger{0} %msg %n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>


    <!--
    <logger name="junit" level="INFO">
        <appender-ref ref="STDOUT" />
    </logger>
    -->

</configuration>